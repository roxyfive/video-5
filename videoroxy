<script>
    let cartCount = 0;
    let cartTotal = 0;
    const cartBadge = document.querySelector('.cart span');
    const cartPopup = document.getElementById('cartPopup');
    const cartItemsContainer = document.getElementById('cartItems');
    const cartTotalDisplay = document.getElementById('cartTotal');
    let cartItems = {};

    function addToCart(productName, price) {
        cartCount++;
        cartBadge.textContent = cartCount;

        if(cartItemsContainer.children[0].tagName === 'P'){
            cartItemsContainer.innerHTML = '';
        }

        if(cartItems[productName]){
            cartItems[productName].qty++;
            cartItems[productName].total = (cartItems[productName].qty * price).toFixed(2);
            const itemDiv = document.getElementById(productName);
            itemDiv.querySelector('.qty').textContent = cartItems[productName].qty;
            itemDiv.querySelector('.item-total').textContent = cartItems[productName].total + 'â‚¬';
        } else {
            cartItems[productName] = { qty: 1, price: price, total: price.toFixed(2) };
            const div = document.createElement('div');
            div.className = 'cart-item';
            div.id = productName;
            div.innerHTML = `${productName} <span class="qty">1</span>x <span class="item-total">${price.toFixed(2)}â‚¬</span>`;
            cartItemsContainer.appendChild(div);
        }

        updateTotal();
        cartPopup.style.display = 'flex';
    }

    function updateTotal() {
        cartTotal = 0;
        for(let item in cartItems){
            cartTotal += parseFloat(cartItems[item].total);
        }
        cartTotalDisplay.textContent = `Totale: ${cartTotal.toFixed(2)}â‚¬`;
    }

    function toggleCart() {
        cartPopup.style.display = cartPopup.style.display === 'flex' ? 'none' : 'flex';
    }

    function checkout() {
        alert(`Totale ordine: ${cartTotal.toFixed(2)}â‚¬\nFunzione checkout simulata.`);
    }

    document.addEventListener('click', function(event){
        if(!cartPopup.contains(event.target) && !document.querySelector('.cart').contains(event.target)){
            cartPopup.style.display = 'none';
        }
    });
</script>

